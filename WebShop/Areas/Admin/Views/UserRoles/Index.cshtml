 @model List<UserRolesViewModel>

@{
    ViewData["Title"] = "Users with roles";
}

<h1>Users with roles</h1>

<table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles)</td>
                <td>
                    <a asp-action="AddRolesToUser" class="btn btn-primary" asp-route-id="@user.Id">
                        Add/Remove roles
                    </a>
                </td>
            </tr>
        }
        </tbody>
</table>

