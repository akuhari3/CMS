@model ProductCategory
@{
    ViewData["Title"] = "Delete";

}

<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-controller="ProductCategory" asp-action="Index" asp-route-productId="@ViewBag.ProductId">Product categories</a></li>
  <li>Remove category</li>
</ul>
<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-6 col-md-6">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                        <div class="p-5">
<h4>Are you sure you want to remove this category?</h4>
<p>
    Product: @Model.ProductTitle
</p>
<p>
    Category: @Model.CategoryTitle
</p>


<form asp-action="Delete" method="post">
    <div class="d-flex justify-content-between">
    <a class="btn btn-secondary" asp-action="Index" asp-route-productId="@Model.ProductId">Back</a>
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>
</div>
 </div>
            </div>
        </div>
        </div>