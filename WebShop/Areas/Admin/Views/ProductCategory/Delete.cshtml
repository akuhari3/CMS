@model ProductCategory
@{
    ViewData["Title"] = "Delete";
}

<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-controller="ProductCategory" asp-action="Index" asp-route-productId="@ViewBag.ProductId">Product categories</a></li>
  <li>Remove category</li>
</ul>

<h2>Are you sure?</h2>
<p>
    @Model.ProductTitle
</p>
<p>
    @Model.CategoryTitle
</p>


<form asp-action="DeleteProductCategory">
    <a class="btn btn-secondary" asp-action="Index" asp-route-productId="@Model.ProductId">Back</a>
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
<a asp-action="Index" asp-route-productId="@Model.ProductId">Back</a>