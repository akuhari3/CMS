@model IEnumerable<ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Administration</a></li>
    <li>Product categories</li>
</ul>
<p>
    <a class="btn btn-success" asp-action="Create" asp-route-productId="@ViewBag.ProductId">Add category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product title</th>
            <th>Category title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductTitle</td>
                <td>@item.CategoryTitle</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" asp-route-productId="@ViewBag.ProductId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" asp-route-productId="@ViewBag.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Product">Back</a>
</p>