@model IEnumerable<ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li>Product categories</li>
</ul>

<p>
    <a asp-action="Create" asp-route-productId="@ViewBag.ProductId">Create new category for product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product title</th>
            <th>Category title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductTitle</td>
                <td>@item.CategoryTitle</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-productId="@ViewBag.ProductId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-route-productId="@ViewBag.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Index" asp-controller="Product">Back to Products</a>
</p>