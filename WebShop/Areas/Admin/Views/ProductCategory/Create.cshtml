@model ProductCategory
@{
    ViewData["Title"] = "Create";
}

<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-controller="ProductCategory" asp-action="Index" asp-route-productId="@ViewBag.ProductId">Product categories</a></li>
  <li>Create new Category for product</li>
</ul>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />
            <div class="form-group">
                <label asp-for="CategoryTitle" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
            </div>
            <div class="form-group d-flex justify-content-between">
                <a class="btn btn-secondary" asp-action="Index" asp-route-productId="@ViewBag.ProductId">Back</a>
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}