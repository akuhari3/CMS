@model ProductCategory
@{
    ViewData["Title"] = "Create";
}

<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Administration</a></li>
    <li><a asp-controller="ProductCategory" asp-action="Index" asp-route-productId="@ViewBag.ProductId">Product categories</a></li>
    <li>Create new Category for product</li>
</ul>
<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-6 col-md-6">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="p-5">
                    <form asp-action="Create">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />
                        <div class="form-group">
                            <label asp-for="CategoryTitle" class="control-label"></label>
                            <select asp-for="CategoryId" class="form-control col-12" asp-items="@ViewBag.Categories"></select>
                        </div>
                        <div class="form-group d-flex justify-content-between">
                            <a class="btn btn-secondary" asp-action="Index" asp-route-productId="@ViewBag.ProductId">Back</a>
                            <input type="submit" value="Add" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}