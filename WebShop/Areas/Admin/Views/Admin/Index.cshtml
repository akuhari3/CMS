@using WebShop.Data
@model List<UserRolesViewModel>

@{
    ViewData["Title"] = "Index";
}

<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li>Users</li>
</ul>


<div class="row justify-content-center">

    <div class="col-xl-12 col-lg-12 col-lg-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="d-flex justify-content-between">
                <div class="form-group" style="margin:25px;">
                        <label>Per Page:</label>
                        <select class="form-control" style="max-width: 70px;" id="BillingCity" name="BillingCountry">
                            <option value="5" selected="selected">5</option>
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                            <option value="25">25</option>
                        </select>
                    </div>
                    <div style="margin:25px;">
                    <label for="gsearch">Search </label>
                    <input type="search" id="gsearch" name="gsearch">
                </div>
                <a asp-action="Create" class="btn btn-primary" style="margin:25px;">Create user</a>
                </div>
                
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                       <table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles)</td>
                <td></td>
                <td>
                    <div class="form-group row">
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-primary" style="margin:5px;">Details</a> 
                    <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-sm btn-primary" style="margin:5px;">Update</a> 
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" style="margin:5px;">Delete</a> 
                    
                    </div>
                </td>
                <td>
                    <a asp-action="AddRolesToUser" class="btn btn-primary" asp-route-id="@user.Id">Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>


                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>



                    