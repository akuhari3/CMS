@model UserViewModel

@{
    ViewData["Title"] = "Create user";
}
<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-controller="Admin" asp-action="Index">Users</a></li>
  <li>Create User</li>
</ul>

<div class="row justify-content-center">

    <div class="col-xl-12 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-start"> 
                                <h1 class="h4 text-gray-900">Create User</h1>
                            </div>
                            <form method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8"><input class="form-control" asp-for="FirstName" placeholder="First Name" /><span asp-validation-for="FirstName" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8"><input class="form-control" asp-for="LastName" placeholder="Last Name" /><span asp-validation-for="LastName" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8"><input class="form-control" asp-for="Email" placeholder="Email" /><span asp-validation-for="Email" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Password" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8"><input class="form-control" asp-for="Password" placeholder="Password" /><span asp-validation-for="Password" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="RepeatedPassword" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8"><input class="form-control" asp-for="RepeatedPassword" placeholder="Repeated Password" /><span asp-validation-for="RepeatedPassword" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Avatar" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8"><input class="form-control" accept="image/*" asp-for="Avatar" placeholder="Avatar" /><span asp-validation-for="Avatar" class="text-danger"></span></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Timezone" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8"><select asp-for="Timezone" class="form-control" asp-items="@ViewBag.Timezones"></select></div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Active" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8 p-3"><input type="checkbox" asp-for="Active" class="form-check-input" style="margin-left: -0.25rem" placeholder="Active" /><span asp-validation-for="Active" class="text-danger"></span></div>
                                </div>

                                <div class="form-group d-flex justify-content-between">
                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="Index">Back</a>

                                    <button class="btn btn-primary" type="submit">Create</button>
                                </div>

                            </form>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>