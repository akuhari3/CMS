@model ApplicationUser
@using WebShop.Data

@{
    ViewData["Title"] = "Details";
}

<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Administration</a></li>
   <li><a asp-controller="Admin" asp-action="Index">Users</a></li>
   <li>User details</li>
</ul>
<div class="row justify-content-center">
   <div class="col-xl-12 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
         <div class="card-body p-5">
            View User
            <hr>
            <div class="row">
               <div class="col-4">
                  <div class="p-3">
                     First Name
                  </div>
                  <div class="p-3">
                     Last Name
                  </div>
                  <div class="p-3">
                     User Name
                  </div>
                  <div class="p-3">
                     Email Address
                  </div>
                  <div class="p-3">
                     Status
                  </div>
                  <div class="p-3">
                     Timezone
                  </div>
                  <div class="p-3">
                     Roles
                  </div>
               </div>
               <div class="col-4">
                  <div class="p-3">
                     @Model.FirstName
                  </div>
                  <div class="p-3">
                     @Model.LastName
                  </div>
                  <div class="p-3">
                     @Model.UserName
                  </div>
                  <div class="p-3">
                     @Model.Email
                  </div>
                  <div class="p-3">
                     <input type="checkbox" asp-for="@Model.Active" disabled>
                  </div>
                  <div class="p-3">
                     @Model.Timezone
                  </div>
                  <div class="p-3">
                     @string.Join(" , ",ViewBag.UserList)
                  </div>
               </div>
               <div class="col-4">
                  
                     @if (@Model.Avatar != null)
                     {
                         <div class="justify-content-center">
                     <img style="width:150px;height:150px;" src="data:image/*;base64,@Convert.ToBase64String(@Model.Avatar)" />
                     
                     <form asp-action="RemoveImage" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <br>
                           <input type="submit" value="Remove Image" class="btn btn-danger" />
                        </div>
                     </form>
                            </div>
                     }
                     else
                     {
                     <img class="card-img-top" style="width:150px;height:150px;" src="~/images/users/no-photo.jpg" alt="Card image">
                     <span class="row">No image available!</span>
                     }
                  
               </div>
            </div>
         </div>
         <div class="form-group d-flex justify-content-start">
            <a class="btn btn-secondary m-5" asp-area="Admin" asp-controller="Admin" asp-action="Index">Back</a>
         </div>
      </div>
   </div>
</div>

