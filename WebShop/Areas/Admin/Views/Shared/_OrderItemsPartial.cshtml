@{
   
}

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.OrderItems)
            {
                <tr>
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @((item.Quantity * item.Price).ToString("c"))
                    <td>
                        <a asp-action="DeleteOrderItem" asp-route-id="@item.Id" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove">X</span>
                        </a>
                    </td>
                </tr>
            }
            <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <b>Total price: @ViewBag.TotalPrice Kn</b>
                    <td>
                </tr>
        </tbody>
    </table>
    <bl />

    
}
else
{
    <h4>No order items yet....</h4>
}

