@model List<Category>
@{
    ViewData["Title"] = "Index";
}
<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li>Categories</li>
</ul>

<p>
    <a class="btn btn-primary" asp-action="Create">Create new Category</a>
</p>

@if (Model.Count == 0)
{
    <div class="text-center">
       <h1>No categories in Store</h1>
    </div>
}
else
{

    <div class="row justify-content-center">

    <div class="col-xl-12 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">

<table class="table">
    <thead>
        <tr>
            <th class="col-3">
                Title
            </th>
            <th class="col-8">
                Description
            </th>
            <th class="col-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.CategoryDescription)</td>
                <td>
                    <div class="btn-group">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
                   
                </div>
            </div>
        </div>
    </div>
}