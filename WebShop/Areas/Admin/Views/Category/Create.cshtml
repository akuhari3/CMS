@model WebShop.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Create";
}

<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-controller="Category" asp-action="Index">Categories</a></li>
  <li>Create category</li>
</ul>

<h4>Create new Category</h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary=ModelOnly class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryDescription" class="control-label"></label>
                <input asp-for="CategoryDescription" class="form-control" />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryImage" class="form-label"></label>

                        <div class="custom-file">
                            <input class="form-control custom-file-input" asp-for="CategoryImage" />
                            <label class="custom-file-label">Select Image</label>
                        </div>

             </div>
             <div class="form-group">
                                    <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Index">Back</a>
                                    <button class="btn btn-success" type="submit">Create</button>
                                </div>
        </form>
    </div>
</div>

