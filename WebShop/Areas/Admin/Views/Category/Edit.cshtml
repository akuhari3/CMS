@model WebShop.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Edit";
}

<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Category" asp-action="Index">Categories</a></li>
    <li>Edit Category</li>
</ul>
<div class="text-start">
    <h1 class="h4 text-gray-900">Edit Category</h1>
</div>
<div class="row justify-content-center">
    <div class="col-xl-12 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form enctype="multipart/form-data" asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CategoryName" class="control-label"></label>
                                <input asp-for="CategoryName" class="form-control" />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryImage" class="col-form-label"></label>
                                <div class="custom-file">
                                    <input class="form-control custom-file-input" asp-for="CategoryImage" />
                                    <label class="custom-file-label">Select image</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryDescription" class="control-label"></label>
                                <textarea asp-for="CategoryDescription" class="form-control" rows="6"></textarea>
                                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                            </div>
                            <div class="btn-group">
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}