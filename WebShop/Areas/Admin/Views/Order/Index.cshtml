@model List<Order>
@{
    ViewData["Title"] = "Orders";
}
<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Administration</a></li>
    <li>Orders</li>
</ul>
<p>
    <a class="btn btn-success" asp-action="Create">Create</a>
</p>
@if (Model.Count == 0)
{
    <div class="text-center">
        <h1>No orders in Store</h1>
    </div>
}
else
{
    <div class="row justify-content-center">
        <div class="col-xl-12 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-1">Id</th>
                                <th class="col-2">Date Created</th>
                                <th class="col-2">Email</th>
                                <th class="col-2">Order State</th>
                                <th class="col-2">Total</th>
                                <th class="col-3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@item.DateCreated.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@Html.DisplayFor(modelItem => item.BillingEmail)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OrderState)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Total)$</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}