@model OrderItem
@{
    ViewData["Title"] = "AddOrderItem";
}

<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-controller="Order" asp-action="Index">Orders</a></li>
  <li>Add order item</li>
</ul>

<div class="row justify-content-center">
    <div class="col-xl-12 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-start"> 

        <form asp-action="AddOrderItem">
            <div asp-validation-summary="All"></div>
            <input type="hidden" value="@ViewBag.OrderId" name="OrderId" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-control"> </select>
                <span asp-validation-for="ProductId"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input type="number" step="1.0" asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" step="1.0" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </form>


                        </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
</div>