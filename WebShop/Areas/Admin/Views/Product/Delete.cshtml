@model WebShop.Models.Product

@{
    ViewData["Title"] = "Delete";
    var photoPath = "~/images/products/" + (Model.ProductImage ?? "no-photo.png");
}

<ul class="breadcrumb">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-controller="Product" asp-action="Index">Products</a></li>
  <li>Delete product</li>
</ul>

<h3>Are you sure you want to delete this product?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-md-4">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-md-4">
                @Html.DisplayFor(model => model.Quantity)pcs
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-md-4">
                @Html.DisplayFor(model => model.Price)$
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-12">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>
            <dd class="col-md-8">
                <textarea asp-for="@Model.ProductDescription" class="form-control" disabled rows="6"></textarea>
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <img class="card-img-top" style="max-width: fit-content" src="@photoPath" asp-append-version="true" />
    </div>

    <div class="row">
    <div class="btn-group d-flex justify-content-between">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-secondary" asp-action="Index">Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    </div>
    </div>
</div>
