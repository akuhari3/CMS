@model WebShop.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Create";
}

<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Product" asp-action="Index">Products</a></li>
    <li>Create new product</li>
</ul>
<div class="row justify-content-center">
    <div class="col-xl-12 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-start">
                                <h1 class="h4 text-gray-900">Create Product</h1>
                            </div>
                            <form enctype="multipart/form-data" asp-action="Create" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="ProductName" class="control-label"></label>
                                    <input asp-for="ProductName" class="form-control" />
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductDescription" class="control-label"></label>
                                    <input asp-for="ProductDescription" class="form-control" />
                                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label"></label>
                                    <input type="number" step="1.0" asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Quantity" class="control-label"></label>
                                    <input type="number" step="1.0" asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="ProductImage" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <div class="custom-file">
                                            <input class="form-control custom-file-input" asp-for="ProductImage" />
                                            <label class="custom-file-label">Select Image</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group  d-flex justify-content-between">
                                    <a class="btn btn-secondary" asp-area="Admin" asp-controller="Product" asp-action="Index">Back</a>
                                    <button class="btn btn-success" type="submit">Create</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
