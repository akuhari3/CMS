@model List<Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create new product</a>
</p>

@if (Model.Count == 0)
{
    <div class="text-center">
        <h1>No products in Store</h1>
    </div>
}
else
{
<div class="row justify-content-center">

    <div class="col-xl-12 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">

<table class="table">
    <thead>
        <tr>
            <th class="col-2">
                Title
            </th>
            <th class="col-7">
                Description
            </th>
            <th class="col-1">
                Price
            </th>
            <th class="col-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-2">@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td class="col-7">@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                <td class="col-1">@Html.DisplayFor(modelItem => item.Price)$</td>
                <td>
                    <div class="btn-group">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                    <a asp-action="Index" asp-controller="ProductCategory" asp-route-productId="@item.Id">Add new Category</a>
                </td>
            </tr>
        }
    </tbody>

</table>
 </div>
                   
                </div>
            </div>
        </div>
    </div>
    }