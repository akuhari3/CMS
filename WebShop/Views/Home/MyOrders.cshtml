@model List<Order>
@{
    ViewData["Title"] = "Orders";
}

@if (Model.Count == 0)
{
    <div class="text-center">
        <h1>No orders in Store</h1>
    </div>
}
else
{
    <div class="row justify-content-center">
        <div class="col-xl-12 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Date Created</th>
                                <th>Email</th>
                                <th>Order State</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BillingEmail)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OrderState)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Total)$</td>
                                    <td>
                                        <a class="btn btn-secondary" asp-action="OrderDetails" asp-route-id="@item.Id">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
<div>
    <a class="btn btn-secondary" asp-action="Product">Back</a>
</div>